<Window x:Class="HTTPUser.Views.AddOrUpdateProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HTTPUser.Views"
        mc:Ignorable="d"
        Title="Product Window" Height="250" Width="250">
    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Center">
            <TextBlock Text="Product Name:" FontWeight="Bold"/>
            <TextBox x:Name="txtName" Margin="0,5" Width="200"/>
            <TextBlock Text="Price:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="txtPrice" Margin="0,5" Width="200"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Save" Click="Save_Click"/>
                <Button Content="Cancel" Click="Cancel_Click" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
