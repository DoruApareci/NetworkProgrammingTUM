<Window x:Class="NTPClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NTPClientApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Introduceți fusul orar (ex: GMT+2)" Margin="10" HorizontalAlignment="Center"/>
        <TextBox Name="TimeZoneTextBox" Width="200" Margin="10"/>
        <Button Content="Obține Ora" Click="Button_Click" Width="100" Margin="10"/>
        <TextBlock Name="TimeDisplayTextBlock" Margin="10" FontSize="16" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
